<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edge_list"
        android:layout_margin="@dimen/card_margin"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="4dp"
        card_view:elevation="3dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_fruit_image_list"
                android:layout_gravity="start|center"
                android:layout_width="@dimen/edge_image_list"
                android:layout_height="@dimen/edge_image_list"
                android:contentDescription="@string/fruit_image"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center"
                android:orientation="vertical"
                android:paddingLeft="@dimen/common_20">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dasdasdasda"
                    android:textAppearance="@android:style/TextAppearance.Holo.Large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_price_dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="asdasddasdasd" />



            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>