<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/height_list">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/img_fruit_image"
            android:layout_gravity="center"
            android:layout_width="@dimen/edge_image"
            android:layout_height="@dimen/edge_image" />

    </LinearLayout>


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/txt_fruit_name"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="dasdasdasd"
            android:paddingTop="@dimen/padding_top_1"/>
        <TextView
            android:id="@+id/txt_fruit_price"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="51"
            android:layout_below="@+id/txt_fruit_name"
            android:paddingTop="@dimen/padding_top_1"/>

    </RelativeLayout>




</LinearLayout>